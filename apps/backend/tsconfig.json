{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@spm/db/*": ["../../packages/db/*"],
      "@spm/auth/*": ["../../packages/auth/*"],
      "@spm/utils/*": ["../../packages/utils/*"]
    },
    "composite": true
  },
  "include": [
    "src/**/*",
    "../../packages/db/**/*",
    "../../packages/auth/**/*",
    "../../packages/utils/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
