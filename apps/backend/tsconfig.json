{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@spm/db": ["../../packages/db/dist/index"],
      "@spm/db/*": ["../../packages/db/dist/*"],
      "@spm/auth": ["../../packages/auth/dist/index"],
      "@spm/auth/*": ["../../packages/auth/dist/*"],
      "@spm/utils": ["../../packages/utils/dist/index"],
      "@spm/utils/*": ["../../packages/utils/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/db" },
    { "path": "../../packages/auth" },
    { "path": "../../packages/utils" }
  ]
}
