// packages/db/prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Neon Postgres
}

generator client {
  provider = "prisma-client-js"
}

model Producto {
  id            Int      @id @default(autoincrement())
  codigo_barras String   @unique
  nombre        String
  precio        Float
  stock         Int      @default(0)
  fecha_ingreso DateTime @default(now())
  compras       Compra[]
  ventas        Venta[]

  @@map("productos")
}

model Compra {
  id             Int      @id @default(autoincrement())
  producto_id    Int
  cantidad       Int
  costo_unitario Float
  fecha          DateTime @default(now())
  producto       Producto @relation(fields: [producto_id], references: [id])

  @@map("compras")
}

model Venta {
  id              Int      @id @default(autoincrement())
  producto_id     Int
  cantidad        Int
  precio_unitario Float
  total           Float
  metodo_pago     String   @default("efectivo")
  notas           String?
  fecha           DateTime @default(now())
  producto        Producto @relation(fields: [producto_id], references: [id])

  @@map("ventas")
}
