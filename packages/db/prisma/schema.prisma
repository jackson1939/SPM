// packages/db/prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Neon Postgres
}

generator client {
  provider = "prisma-client-js"
}

model Producto {
  id            Int      @id @default(autoincrement())
  codigo_barras String   @unique
  nombre        String
  precio        Float
  stock         Int
  fecha_ingreso DateTime @default(now())
}
