{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@spm/db": ["./packages/db/src"],
      "@spm/auth": ["./packages/auth/src"],
      "@spm/utils": ["./packages/utils/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next"]
}

